<fieldset id="client_data">

  <h2 class="fs-title">Personal Information</h2>
  <h3 class="fs-subtitle"></h3>
  
      <div class="client_information">
        <div class="row">

          <div class="col-md-3 col-xs-12">
            <input type="text" name="email" placeholder="Your Email" class="form-control" required="true"/>
          </div>

          <div class="col-md-3 col-xs-12">
            <input type="text" name="phone_number" placeholder="Your Phone Number" class="form-control"/>
          </div>

          <div class="col-md-3 col-xs-12">    
            <div class="checkbox">         
              <label><input type="checkbox" name="receive_notice_of_assesment"/>Would you like to receive your notice of assessment by email?</label>
            </div>
          </div>

          <div class="col-md-3 col-xs-12">   
            <div class="checkbox">     
              <label><input type="checkbox" name="register_for_direct_deposit" class="form-control">Are you registered for direct deposit?</label>    
            </div>                             
          </div>
        </div>

        <br>

        <div class="row">
          <div class="col-md-4 col-xs-12">
            <input type="text" name="first_name" placeholder="First Name" class="form-control"/>
            <p>*Note: Please use the full name you use for government communication.</p>
          </div>
          <div class="col-md-4 col-xs-12">
            <input type="text" name="last_name" placeholder="Last Name" class="form-control"/>
          </div>

          <div class="col-md-4 col-xs-12">
            <input type="date" name="date_of_birth" class="form-control"/>
          </div>
        </div>
          
        <br>

        <div class="row">
          <div class="col-md-4 col-xs-12">
            <input type="text" name="social_insurance" placeholder="Social Insurance Number" class="form-control"/>
          </div>            
        </div>

        <br>

        <div class="row">
          <div class="col-md-4 col-xs-12">
            <label for="status">Marital Status</label>
            <select name="status"  class="form-control">
              <% OnlineEstimate::STATUSES.each do |status| %>
                <option value="<%= status %>"><%= status %></option>
              <% end %>
            </select>
          </div>

          <div class="col-md-4 col-xs-12">
            <label for="change_in_status_during_year">Have you had a change in status during the year?</label>
            <label class="radio-inline"><input type="radio" name="change_in_status_during_year" id="change-in-status" value="true">Yes</label>
            <label class="radio-inline"><input type="radio" name="change_in_status_during_year" id="change-in-status" value="false">No</label>
          </div>

          <div class="col-xs-12 col-md-4"  >
            <label for="gender">Gender</label>
            <select name="gender" class="form-control">
              <% OnlineEstimate::GENDER.each do |gender| %>
                <option value="<%= gender %>"><%= gender %></option>
              <% end %>
            </select>
          </div>  
        </div>

        <br>
        
        <div id="options-for-change-in-status" style="display: none;">
          <div class="row">
            <div class="col-md-6 col-xs-12">
              <label for="date_of_name_of_status">Date of Status Change</label>
              <input type="date" class="form-control" name="date_of_name_of_status">
            </div>
            <div class="col-md-6 col-xs-12">
              <label for="status_before_date">Marital Status</label>
              <select name="status_before_date" class="form-control">
                <% OnlineEstimate::STATUSES.each do |status| %>
                  <option value="<%= status %>"><%= status %></option>
                <% end %>
              </select>      
            </div>
          </div>
        </div>
                
      </div>

      <br>

      <div class="row">
        <div class="col-xs-12">
          <p id="add_spouse_info" class="add_additional_info"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add information about your spouse</p>
        </div>
      </div>

      <div class="spouse_information">
        <div class="row">
          <div class="col-md-6 col-xs-12">
            <input type="text" name="spouse_first_name" placeholder="Spouse First Name" class="form-control"/>
          </div>
          <div class="col-md-6 col-xs-12">
            <input type="text" name="spouse_last_name" placeholder="Last Name" class="form-control"/>
          </div>
        </div>

        <br>   

        <div class="row">
          <div class="col-md-6 col-xs-12">
            <input type="text" name="spouse_date_of_birth" placeholder="Date of Birth" class="form-control"/>
          </div>
          <div class="col-md-6 col-xs-12">
            <input type="text" name="spouse_social_insurance" placeholder="Social Insurance Number" class="form-control"/>
          </div>
        </div>
        
        <br>

        <div class="row">
          <div class="col-md-6 col-xs-12">
            <input type="text" name="spouse_phone_number" placeholder="Phone Number" class="form-control"/>
          </div>
          <div class="col-md-6 col-xs-12">
            <input type="text" name="spouse_email" placeholder="Email Address" class="form-control"/>
          </div>
        </div>

        <br>

        <div class="row">
          <div class="col-md-12 col-xs-12">  
            <label for="residence">Residence</label>
            <label class="radio-inline"><input type="radio" name="residence" value="Tenant">Tenant</label>
            <label class="radio-inline"><input type="radio" name="residence" value="Owner">Owner</label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 col-md-offset-4 col-xs-12" style="display: none;" id="property-tax">
            <input type="text" name="property_tax_paid" placeholder="Property Tax Paid" class="form-control"/>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 col-md-offset-4 col-xs-12" style="display: none;" id="rent-paid">
            <input type="number" name="rent_paid" placeholder="Rent paid during year (12 months)" class="form-control"/>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12"  >
          <p id="add_child_info" class="add_additional_info"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add information about your child</p>
